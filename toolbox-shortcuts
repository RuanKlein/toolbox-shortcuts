### toolbox-shortcuts: cli utility

applicationroot="$(dirname "$(readlink -f "$0")")"

source "${applicationroot}/lib/options.sh"
source "${applicationroot}/lib/helpers.sh"

check_dep podman || perror "podman not found $(is_container && echo -n "(you're in â¬¢ $(get_container_info name))")"

options=("create" "help")
exec=$(get_option "$1" ${options[*]})

$exec ${*:2}